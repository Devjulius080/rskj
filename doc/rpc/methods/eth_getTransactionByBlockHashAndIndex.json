{
  "name": "eth_getTransactionByBlockHashAndIndex",
  "summary": "Returns information about a transaction by block hash and transaction index position.",
  "params": [
    {
      "$ref": "#/components/contentDescriptors/BlockHash"
    },
    {
      "name": "index",
      "description": "The ordering in which a transaction is mined within its block.",
      "required": true,
      "schema": {
        "$ref": "#/components/schemas/IntegerHex"
      }
    }
  ],
  "result": {
    "$ref": "#/components/contentDescriptors/TransactionResult"
  },
  "examples": [
    {
      "name": "regularTransactionFound",
      "params": [
        {
          "name": "blockHash",
          "value": "0x89d446b103322c8f35cddb4e11185997f747b3748bb42d3b7b3bbe214748af85"
        },
        {
          "name": "index",
          "value": "0x0"
        }
      ],
      "result": {
        "name": "regular transaction",
        "value": {
          "$ref": "#/components/schemas/TransactionExampleResult"
        }
      }
    },{
      "name": "remascTransactionFound",
      "params": [
        {
          "name": "blockHash",
          "value": "0x89d446b103322c8f35cddb4e11185997f747b3748bb42d3b7b3bbe214748af85"
        },
        {
          "name": "index",
          "value": "0x1"
        }
      ],
      "result": {
        "name": "remasc transaction",
        "value": {
          "$ref": "#/components/schemas/RemascTransactionExampleResult"
        }
      }
    },{
      "name": "nullExample",
      "params": [
        {
          "name": "blockHash",
          "value": "0x1234567890abcdef1234567890abcdef1234567890abcdef1234567890abcdef"
        },
        {
          "name": "index",
          "value": "0x0"
        }
      ],
      "result": {
        "name": "noTransaction",
        "value": null
      }
    }
  ]
}
