{
  "name": "eth_getTransactionByBlockNumberAndIndex",
  "summary": "Returns the information about a transaction requested by the block number and index of which it was mined.",
  "params": [
    {
      "$ref": "#/components/contentDescriptors/BlockNumberOrTag"
    },
    {
      "name": "index",
      "description": "The ordering in which a transaction is mined within its block.",
      "required": true,
      "schema": {
        "$ref": "#/components/schemas/IntegerHex"
      }
    }
  ],
  "result": {
    "$ref": "#/components/contentDescriptors/TransactionResult"
  },
  "examples": [
    {
      "name": "regularTransactionFound",
      "params": [
        {
          "name": "blockNumber",
          "value": "0x2ec6b8"
        },
        {
          "name": "index",
          "value": "0x0"
        }
      ],
      "result": {
        "name": "regular transaction",
        "value": {
          "$ref": "#/components/schemas/TransactionExampleResult"
        }
      }
    },{
      "name": "remascTransactionFound",
      "params": [
        {
          "name": "blockNumber",
          "value": "0x2ec6b8"
        },
        {
          "name": "index",
          "value": "0x1"
        }
      ],
      "result": {
        "name": "remasc transaction",
        "value": {
          "$ref": "#/components/schemas/RemascTransactionExampleResult"
        }
      }
    },{
      "name": "nullExample",
      "params": [
        {
          "name": "blockNumber",
          "value": "0x174876e800"
        },
        {
          "name": "index",
          "value": "0x0"
        }
      ],
      "result": {
        "name": "nullResultExample",
        "value": null
      }
    }
  ]
}
