{
  "name": "eth_getBlockByHash",
  "summary": "Returns information about a block by hash",
  "params": [
    {
      "name": "blockHash",
      "required": true,
      "schema": {
        "$ref": "#/components/schemas/BlockHash"
      }
    },
    {
      "name": "fullTransactionObjects",
      "description": "If `true` this method returns the full transaction objects, if `false` only the hashes of the transactions.",
      "required": true,
      "schema": {
        "title": "fullTransactionObjects",
        "type": "boolean"
      }
    }
  ],
  "result": {
    "name": "getBlockByHashResult",
    "schema": {
      "$ref": "#/components/schemas/BlockOrNull"
    }
  },
  "examples": [
    {
      "name": "blockWithTransactions",
      "description": "blockWithTransactions",
      "params": [
        {
          "name": "blockHash",
          "value": "0xe670ec64341771606e55d6b4ca35a1a6b75ee3d5145a99d05921026d1527331"
        },
        {
          "name": "fullTransactionObjects",
          "value": true
        }
      ],
      "result": {
        "$ref": "#/components/schemas/BlockExampleResult"
      }
    }
  ]
}
